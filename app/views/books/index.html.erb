<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th><%= t 'common.title' %></th>
      <th><%= t 'common.memo' %></th>
      <th><%= t 'common.author' %></th>
      <th><%= t 'common.picture' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('common.show'), book %></td>
        <td><%= link_to t('common.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('common.destroy'), book, method: :delete, data: { confirm: t('common.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('common.new_book'), new_book_path %>
